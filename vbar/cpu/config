#enable blink
blink = 1
#speed of blink in ms
blink.time = 450
#blink when cpu is over 90%
blink.on = 90
#refresh time in ms
refresh = 1000
icon = "ï‹›"

#formatting output
#$@ icon 
#$0 all core
#$1 core 1
#$2 core 2
#$n etc etc

text.full = "$@ $0%"
