#enable blink
blink = 1
#speed of blink in ms
blink.time = 450
#blink when remain memory is less 1GiB, unit in KB
blink.on = 1048576
#refresh time in ms
refresh = 5000
#set unit to GiB, 1 unit = 1 KB
unit = 1048576
icon = "ï”¸"
#formatting output
#$@ icon 
#$0 total
#$1 free
#$2 shared
#$3 buffers+cached
#$4 available
#$5 total swap
#$6 free swap
#$7 used

text.full = "$@ $7/$0 GiB"
text.short = "$@ $7 GiB"
text.short.enable = 1

event = "${toggle(memory,generic,text.short.enable)}${refresh()}" 
 

